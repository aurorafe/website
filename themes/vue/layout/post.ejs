<div class="sidebar blog">
  <ul class="main-menu">
    <%- partial('partials/main_menu', {context: 'nav'}) %>
  </ul>
  <div class="list">
    <!--     <h2>
             Recent Posts
             <a href="/atom.xml" target="_blank" style="vertical-align: middle; margin-left: 5px">
                 <img src="/images/feed.png" style="width:15px;height:15px">
             </a>
         </h2>-->
    <ul style="padding:0">
      <% site.posts.sort('order', 1).limit().each(function (post) { %>
      <% if (post.secTitle === 'basics' && page.type == 'guide') { %>
        <li><h3>基础使用</h3></li>
      <% } %>
      <% if (post.secTitle === 'advanced' && page.type == 'guide') { %>
      <li><h3>进阶</h3></li>
      <% } %>
      <% if (post.secTitle === 'description' && page.type == 'guide') { %>
      <li><h3>说明</h3></li>
      <% } %>
      <li>
        <% if (post.type === page.type) { %>
        <a href="/<%- post.path %>"
           class="sidebar-link<%- page.title === post.title ? ' current' : '' %>"><%- post.title %></a>
        <% } %>
      </li>
      <% }) %>
    </ul>
  </div>
</div>
<div class="content with-sidebar blog post">
  <%- partial('partials/ad') %>
  <h1><%- page.title %></h1>
  <h4><%- page.date.format('MMM D[,] YYYY') %></h4>
  <%- page.content %>
</div>
